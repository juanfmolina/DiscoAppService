<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/DiscoApp?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.show_sql">true</property>
    <property name="hibernate.current_session_context_class">thread</property>
    <mapping resource="co/udea/edu/compumovil/gr10/discoapp/domain/hibernatemapping/Calificacion.hbm.xml"/>
    <mapping resource="co/udea/edu/compumovil/gr10/discoapp/domain/hibernatemapping/SolicitudCancion.hbm.xml"/>
    <mapping resource="co/udea/edu/compumovil/gr10/discoapp/domain/hibernatemapping/Usuario.hbm.xml"/>
    <mapping resource="co/udea/edu/compumovil/gr10/discoapp/domain/hibernatemapping/Evento.hbm.xml"/>
    <mapping resource="co/udea/edu/compumovil/gr10/discoapp/domain/hibernatemapping/Cancion.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
